{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "dependencies": {
    "postcss": "^8.4.22",
    "sass-basis": "^18.2.0"
  },
  "devDependencies": {
    "@inc2734/unitone-css": "^0.40.4",
    "@wordpress/env": "^5.16.0",
    "@wordpress/scripts": "^26.2.0",
    "autoprefixer": "^10.4.14",
    "cpy-cli": "^4.2.0",
    "cssnano": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.22",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "rimraf": "^5.0.0",
    "sass": "^1.62.0"
  },
  "scripts": {
    "export:wp-content:themes": "npm run cli 'cp -r wp-content/themes .export/wp-content'",
    "export:wp-content:uploads": "npm run cli 'cp -r wp-content/uploads .export/wp-content'",
    "export:wp-content": "npm run cli 'rm -rf .export/wp-content' && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
    "export:db": "mkdir -p .export/sql && npm run wp 'db export .export/sql/local.sql'",
    "export": "run-p export:*",
    "import:wp-content:themes": "npm run cli 'cp -r .export/wp-content/themes wp-content'",
    "import:wp-content:uploads": "npm run cli 'cp -r .export/wp-content/uploads wp-content'",
    "import:wp-content": "run-p import:wp-content:*",
    "import:db": "npm run wp 'db import .export/sql/local.sql'",
    "import": "run-p import:*",
    "wp-env": "wp-env",
    "start": "wp-env start && open http://localhost:8888",
    "stop": "npm run export && wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "composer": "wp-env run composer",
    "pretest": "wp-env start && wp-env run composer 'install --no-interaction'",
    "test:lint:php": "wp-env start && wp-env run composer run-script lint",
    "test:lint": "run-s test:lint:*",
    "test:unit:php": "wp-env run composer run-script install-theme && wp-env run composer run-script install-plugin && wp-env start && wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/unitone-woocommerce-integrator/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "clean:css": "rimraf dist/css && mkdir -p dist/css",
    "clean:zip": "rimraf unitone-woocommerce-integrator.zip",
    "css:app": "sass --no-source-map src/css/app.scss:dist/css/app.css && postcss dist/css/app.css -r",
    "css": "npm run clean:css && npm-run-all -p css:*",
    "build": "npm-run-all -p css",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.ruleset.xml' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='/tests' --exclude='package*.json' . unitone-woocommerce-integrator && wp-env start && wp-env run composer 'install --no-dev -d unitone-woocommerce-integrator'",
    "zip:archive": "zip -9 -qmr unitone-woocommerce-integrator.zip unitone-woocommerce-integrator",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive",
    "make-pot": "npm run wp 'i18n make-pot wp-content/plugins/unitone-woocommerce-integrator wp-content/plugins/unitone-woocommerce-integrator/languages/unitone-woocommerce-integrator.pot --exclude=.*,src'"
  }
}
